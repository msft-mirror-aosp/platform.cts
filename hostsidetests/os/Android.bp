package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_test_host {
    // Must match the package name in CtsTestCaseList.mk
    name: "CtsOsHostTestCases",
    team: "trendy_team_powermanager_framework",
    defaults: ["cts_defaults"],
    srcs: ["src/**/*.java"],
    libs: [
        "cts-tradefed",
        "tradefed",
        "compatibility-host-util",
        "truth",
    ],
    static_libs: [
        "compatibility-host-util-axt",
    ],
    // Tag this module as a cts test artifact
    test_suites: [
        "cts",
        "general-tests",
    ],
    // All APKs required by the tests
    device_common_data: [
        ":CtsDeviceOsTestApp",
        ":CtsHostEnvironmentTestApp",
        ":CtsHostPowerManagerTestApp",
        ":CtsHostProcfsTestApp",
        ":CtsInattentiveSleepTestApp",
        ":CtsStaticSharedLibConsumerApp1",
        ":CtsStaticSharedLibConsumerApp1BadCertDigest",
        ":CtsStaticSharedLibConsumerApp2",
        ":CtsStaticSharedLibConsumerApp3",
        ":CtsStaticSharedLibProviderApp1",
        ":CtsStaticSharedLibProviderApp2",
        ":CtsStaticSharedLibProviderApp3",
        ":CtsStaticSharedLibProviderApp4",
        ":CtsStaticSharedLibProviderApp5",
        ":CtsStaticSharedLibProviderApp6",
        ":CtsStaticSharedLibProviderApp7",
        ":CtsStaticSharedLibProviderRecursive",
        ":CtsStaticSharedLibTestApp",
        ":CtsStaticSharedNativeLibConsumer",
        ":CtsStaticSharedNativeLibProvider",
        ":CtsStaticSharedNativeLibProvider1",
    ],
    per_testcase_directory: true,
}

test_module_config_host {
    name: "CtsOsHostTestCases_cts_staticsharedlibshosttests",
    base: "CtsOsHostTestCases",
    test_suites: ["general-tests"],
    include_filters: ["android.os.cts.StaticSharedLibsHostTests"],
}

test_module_config_host {
    name: "CtsOsHostTestCases_cts_staticsharedlibshosttests_Presubmit",
    base: "CtsOsHostTestCases",
    test_suites: ["general-tests"],
    include_filters: ["android.os.cts.StaticSharedLibsHostTests"],
    include_annotations: ["android.platform.test.annotations.Presubmit"],
}
