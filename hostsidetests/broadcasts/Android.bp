package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_test_host {
    name: "CtsBroadcastHostTestCases",
    team: "trendy_team_framework_backstage_power",
    defaults: ["cts_defaults"],
    srcs: [
        "src/**/*.java",
        ":CtsBroadcastsTestsConstants",
    ],
    libs: [
        "tools-common-prebuilt",
        "cts-tradefed",
        "tradefed",
        "truth",
    ],
    static_libs: [
        "cts-statsd-atom-host-test-utils",
        "am_flags_host_lib",
        "flag-junit-host",
    ],
    // Tag this module as a cts test artifact
    test_suites: [
        "cts",
        "general-tests",
    ],
    data: [
        ":CtsBroadcastTestHelper",
        ":CtsBroadcastTestReceiver",
    ],
    per_testcase_directory: true,
}

android_test_helper_app {
    name: "CtsBroadcastTestHelper",
    srcs: [
        "test-apps/BroadcastDeviceTestHelper/src/**/*.java",
        ":CtsBroadcastsTestsConstants",
    ],
    static_libs: [
        "compatibility-device-util-axt",
        "androidx.test.ext.junit",
        "androidx.test.rules",
        "truth",
        "testng",
    ],
    manifest: "test-apps/BroadcastDeviceTestHelper/AndroidManifest.xml",
    sdk_version: "test_current",
    // Tag this module as a cts test artifact
    test_suites: [
        "general-tests",
    ],
}

android_test_helper_app {
    name: "CtsBroadcastTestReceiver",
    srcs: [
        "test-apps/BroadcastDeviceTestHelper/src/**/*.java",
        ":CtsBroadcastsTestsConstants",
    ],
    static_libs: [
        "compatibility-device-util-axt",
        "androidx.test.ext.junit",
        "androidx.test.rules",
        "truth",
        "testng",
    ],
    manifest: "test-apps/BroadcastDeviceTestHelper/AndroidManifest.xml",
    aaptflags: [
        "--rename-manifest-package com.android.cts.device.broadcasts.receiver",
    ],
    sdk_version: "test_current",
    // Tag this module as a cts test artifact
    test_suites: [
        "general-tests",
    ],
}

filegroup {
    name: "CtsBroadcastsTestsConstants",
    srcs: [
        "src/**/Constants.java",
    ],
    path: "src",
}
