package {
    default_team: "trendy_team_fwk_nfc",
    default_applicable_licenses: ["Android-Apache-2.0"],
}

android_library {
    name: "nfc-multidevice-utils",
    sdk_version: "test_current",
    srcs: ["utils/**/*.java"],
    manifest: "utils/AndroidManifest.xml",
    min_sdk_version: "34",
    static_libs: [
        "mobly-snippet-lib",
        "androidx.test.runner",
        "guava",
    ],
}

android_test {
    name: "CtsNfcReaderTestApp",
    sdk_version: "test_current",
    srcs: [
        "reader/**/*.java",
    ],
    manifest: "reader/AndroidManifest.xml",
    static_libs: [
        "framework-nfc.impl",
        "compatibility-device-util-axt",
        "nfc-multidevice-utils",
    ],
    min_sdk_version: "34",
}

android_test {
    name: "CtsNfcEmulatorTestApp",
    sdk_version: "test_current",
    srcs: [
        "emulator/**/*.java",
    ],
    manifest: "emulator/AndroidManifest.xml",
    static_libs: [
        "framework-nfc.impl",
        "compatibility-device-util-axt",
        "nfc-multidevice-utils",
    ],
    min_sdk_version: "34",
}
