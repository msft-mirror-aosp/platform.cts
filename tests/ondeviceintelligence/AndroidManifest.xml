<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="android.ondeviceintelligence.cts" android:targetSandboxVersion="2">

    <application>
        <profileable android:shell="true"/>
        <service
            android:name=".CtsIntelligenceService"
            android:permission="android.permission.BIND_ON_DEVICE_INTELLIGENCE_SERVICE"
            android:exported="true">
        </service>
        <service
            android:name=".CtsIsolatedInferenceService"
            android:permission="android.permission.BIND_ON_DEVICE_SANDBOXED_INFERENCE_SERVICE"
            android:isolatedProcess="true"
            android:exported="true">
        </service>
    </application>

    <uses-permission android:name="android.permission.USE_ON_DEVICE_INTELLIGENCE" />

    <!--  self-instrumenting test package. -->
    <instrumentation
        android:name="androidx.test.runner.AndroidJUnitRunner"
        android:label="CTS tests for the OnDevice Intelligence Service APIs."
        android:targetPackage="android.ondeviceintelligence.cts" >
    </instrumentation>
</manifest>