android_test_helper_app {
    name: "CtsMediaProviderTestAppC",
    manifest: "MediaProviderTestHelper/MediaProviderTestAppC.xml",
    sdk_version: "test_current",
    target_sdk_version: "36",
    min_sdk_version: "30",
    srcs: ["MediaProviderTestHelper/src/**/*.java"],
