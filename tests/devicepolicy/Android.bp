android_test {
    name: "CtsDevicePolicyTestCases",
    defaults: ["cts_defaults"],
    min_sdk_version: "33",
    target_sdk_version: "33",
    static_libs: [
        "compatibility-device-util-axt",
        "ctstestrunner-axt",
        "cts-net-utils",
        "truth",
        "androidx.test.ext.junit",
        "testng", // used for assertThrows
        // TODO: Remove this once we remove ui automator usage
        "androidx.test.uiautomator_uiautomator",
        "EventLib",
        "ActivityContext",
        "Harrier",
        "DeviceAdminApp",
        "TestApp",
        "MetricsRecorder",
        "statsdprotolite",
        "Interactive",
        "flag-junit",
        "bedstead-flags",
        "bedstead-root",
        "device_policy_aconfig_flags_lib",
        "TestApisReflection",
        "bedstead-multiuser",
        "bedstead-enterprise",
    ],
    srcs: [
        "src/**/*.java",
        "src/**/*.kt",
    ],
    test_suites: [
        "cts",
        "vts10",
        "general-tests",
    ],
    platform_apis: true,
}

