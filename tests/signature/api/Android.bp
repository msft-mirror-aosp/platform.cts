default_visibility = [
    "//cts/tests/signature/api-check:__subpackages__",
    "//cts/tests/signature/intent-check",
]

genrule {
    name: "cts-current-txt",
    visibility: default_visibility,
    srcs: [
        ":frameworks-base-api-current.txt",
    ],
    out: [
        "current.txt",
    ],
    cmd: "cp $(in) $(out)",
}

