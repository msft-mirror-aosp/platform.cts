    name: "CtsHardwareTestCases_hardware_lights",
    base: "CtsHardwareTestCases",
    test_suites: ["general-tests"],
    include_filters: ["com.android.hardware.lights"],
    exclude_annotations: ["androidx.test.filters.LargeTest"],
