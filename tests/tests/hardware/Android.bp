package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

aidl_interface {
    name: "ctshardware-aidl",
    srcs: [
        "aidl/**/*.aidl",
    ],
    local_include_dir: "aidl",
    include_dirs: [
        "frameworks/base/core/java",
    ],
    unstable: true,
    backend: {
        java: {
            enabled: true,
        },
        cpp: {
            enabled: false,
        },
        rust: {
            enabled: false,
        },
        ndk: {
            enabled: true,
            additional_shared_libraries: [
                "libnativewindow",
            ],
        },
    },
}

android_test {
    name: "CtsHardwareTestCases",
    team: "trendy_team_input_framework",
    defaults: ["cts_defaults"],
    // Tag this module as a cts test artifact
    test_suites: [
        "automotive-general-tests",
        "cts",
        "general-tests",
    ],
    compile_multilib: "both",
    libs: [
        "android.test.runner.stubs.test",
        "android.test.base.stubs.test",
    ],
    static_libs: [
        "CtsVirtualDeviceCommonLib",
        "android.hardware.flags-aconfig-java",
        "androidx.annotation_annotation",
        "androidx.test.ext.junit",
        "com.android.input.flags-aconfig-java",
        "compatibility-device-util-axt",
        "cts-input-lib",
        "cts-kernelinfo-lib",
        "ctstestrunner-axt",
        "cts-wm-util",
        "mockito-target-minus-junit4",
        "platform-test-annotations",
        "ctshardware-aidl-java",
        "junit",
        "junit-params",
        "flag-junit",
        "android.hardware.biometrics.flags-aconfig-java",
        "android.media.codec-aconfig-java",
        "ui-trace-collector",
        "collector-device-lib",
    ],
    jni_libs: [
        "libctshardware_jni",
        "libnativehelper_compat_libc++",
    ],
    srcs: [
        "src/**/*.java",
        "src/**/*.kt",
    ],
    data: [
        ":TestIme",
    ],
    sdk_version: "test_current",
}

test_module_config {
    name: "CtsHardwareTestCases_cts_tests",
    base: "CtsHardwareTestCases",
    test_suites: ["general-tests"],
    include_filters: ["android.hardware.input.cts.tests"],
}

