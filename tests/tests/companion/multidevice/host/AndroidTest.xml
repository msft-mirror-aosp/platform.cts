<configuration description="Config for CTS CDM multi-device test cases">
    <option name="test-suite-tag" value="cts-interactive" />
    <option name="config-descriptor:metadata" key="component" value="framework" />
    <option name="config-descriptor:metadata" key="parameter" value="not_instant_app" />
    <option name="config-descriptor:metadata" key="parameter" value="not_multi_abi" />
    <option name="config-descriptor:metadata" key="parameter" value="secondary_user" />

    <device name="AndroidDevice">
        <target_preparer class="AndroidDeviceFeaturesCheckDecorator">
            <option name="required_feature" value="android.software.companion_device_setup" />
        </target_preparer>
        <target_preparer class="AndroidInstallAppsDecorator" />
    </device>
    <device name="AndroidDevice">
        <target_preparer class="AndroidDeviceFeaturesCheckDecorator">
            <option name="required_feature" value="android.software.companion_device_setup" />
        </target_preparer>
        <target_preparer class="AndroidInstallAppsDecorator" />
    </device>

    <test class="MoblyAospPackageTest" />

    <option name="mobly_pkg" key="file" value="CtsCompanionDeviceManagerMultiDeviceTestCases" />
    <option name="build_apk" key="file" value="cdm_snippet.apk" />

</configuration>
