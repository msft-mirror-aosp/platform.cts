java_library {
    name: "CtsContentUtils",
    defaults: ["cts_defaults"],

    libs: [
        "android.test.runner.stubs.system",
        "android.test.base.stubs.system",
        "android.test.mock.stubs.system",
    ],
    srcs: [
        "src/android/content/cts/**/DummyProvider.java",
        "src/android/content/cts/**/Mock*.java",
        "src/android/content/cts/**/ResultReceiver.java",
        "src/android/content/cts/util/**/*.java",
        "src/**/DummyParcelable.java",
    ],
}

java_defaults {
    name: "cts_content_resources_defaults",

    // Resource unit tests use a private locale and some densities
    aapt_include_all_resources: true,
    aaptflags: [
        "-c cs",
        "-c fil,fil-rPH,fil-rSA",
        "-c fr,fr-rFR",
        "-c iw,iw-rIL",
        "-c kok,b+kok+419,b+kok+419+variant,b+kok+IN,b+kok+Knda,b+kok+Knda+419,b+kok+Knda+419+variant",
        "-c b+kok+variant",
        "-c mk,mk-rMK",
        "-c tl,tl-rPH",
        "-c tgl,tgl-rPH",
        "-c tlh",
        "-c xx,xx-rYY",
    ],
}

java_defaults {
    name: "cts_content_defaults",
    defaults: [
        "cts_defaults",
        "cts_content_resources_defaults",
    ],

    // Don't run manifestmerger on dependencies, it is unhappy with the duplicate
    // REQUIRED_MULTI_DENY permissions in AndroidManifest.xml
    dont_merge_manifests: true,
    // Include both the 32 and 64 bit versions
    compile_multilib: "both",
    jni_libs: [
        "libcts_jni",
        "libnativecursorwindow_jni",
        "libnativehelper_compat_libc++",
    ],
    libs: [
        "android.test.runner",
        "android.test.base",
        "android.test.mock",
    ],
    static_libs: [
        "apache-commons-compress",
        "compatibility-device-util-axt",
        "ctstestrunner-axt",
        "services.core",
        "junit",
        "truth",
        "accountaccesslib",
        // TODO: remove once Android migrates to JUnit 4.12, which provides assertThrows:
        "testng",
        "androidx.legacy_legacy-support-v4",
        "androidx.test.core",
        "androidx.test.uiautomator_uiautomator",
        "cts-install-lib",
        "ShortcutManagerTestUtils",
        "libincfs-prebuilt",
        "HelloWorldResHardeningLib",
        "Nene",
        "Harrier",
        "platformprotosnano",
        "ravenwood-junit",
        "CtsContentUtils",
    ],
    // Use multi-dex as the compatibility-common-util-devicesidelib dependency
    // on compatibility-device-util-axt pushes us beyond 64k methods.
    dxflags: ["--multi-dex"],
    per_testcase_directory: true,
    platform_apis: true,
    min_sdk_version: "29",
    replace_max_sdk_version_placeholder: "current",
}

android_test {
    name: "CtsContentTestCases",
    defaults: ["cts_content_defaults"],

    // Tag this module as a cts test artifact
    test_suites: [
        "cts",
        "general-tests",
        "mts-documentsui",
        "mcts-documentsui",
    ],
    static_libs: [
        "android.security.flags-aconfig-java",
        "flag-junit",
        "TestParameterInjector",
    ],
    srcs: [
        "src/android/content/cts/**/*.java",
        "BinderPermissionTestService/**/I*.aidl",
        "ContentUriTestApp/**/I*.aidl",
    ],
    exclude_srcs: [
        "src/android/content/cts/AvailableDocumentIntentsTest.java",
        "src/android/content/cts/DocumentsUIUsedContentApiTest.java",
    ],
    data: [
        ":CtsSyncAccountAccessStubs",
        ":CtsBinderPermissionTestService",
        ":CtsContentMockRestrictedApp",
        ":CtsContentUriTestApp",
