package {
    default_team: "trendy_team_responsible_apis",
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_defaults {
    name: "CtsIntentResolutionTestAppDefaults",
    srcs: ["src/**/*.java"],
    sdk_version: "current",
    defaults: [
        "cts_defaults",
    ],
    min_sdk_version: "29",
    // tag this module as a cts test artifact
    test_suites: [
        "cts",
        "general-tests",
    ],
}

// Original app
android_test_helper_app {
    name: "CtsIntentResolutionTestApp",
    defaults: ["CtsIntentResolutionTestAppDefaults"],
}

// This app is similar to original app but has "enforceIntentFilter" at application level
android_test_helper_app {
    name: "CtsIntentResolutionApplicationOverrideTestApp",
    defaults: ["CtsIntentResolutionTestAppDefaults"],
    manifest: "AndroidManifest-ApplicationOverride.xml",
}

// This app is similar to "CtsIntentResolutionApplicationOverrideTestApp" but overrides
// intentMatchingFilter flags it at component level
android_test_helper_app {
    name: "CtsIntentResolutionComponentOverrideTestApp",
    defaults: ["CtsIntentResolutionTestAppDefaults"],
    manifest: "AndroidManifest-ComponentOverride.xml",
}
