        "src/android/packageinstaller/criticaluserjourney/cts/InstallationViaIntentWithUpdateOwnershipTest.java",
        "src/android/packageinstaller/criticaluserjourney/cts/InstallationViaSessionWithUpdateOwnershipTest.java",
        "src/android/packageinstaller/criticaluserjourney/cts/PackageInstallerCujTestBase.java",
        "src/android/packageinstaller/criticaluserjourney/cts/InstallationTestBase.java",
