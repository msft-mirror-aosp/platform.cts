package {
    default_team: "trendy_team_framework_android_packages",
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_defaults {
    name: "cts_package_installer_cuj_defaults",
    defaults: ["cts_defaults"],
    sdk_version: "test_current",

    static_libs: [
        "androidx.legacy_legacy-support-v4",
        "androidx.test.uiautomator_uiautomator",
        "androidx.test.rules",
        "androidx.test.ext.junit",
        "compatibility-device-util-axt",
        "platform-test-annotations",
        "truth",
    ],

    test_suites: [
        "cts",
        "general-tests",
    ],
    data: [
        ":CtsInstallerCujTestApp",
        ":CtsInstallerCujTestAppV2",
        ":CtsInstallerCujTestInstaller",
        ":CtsInstallerCujTestInstallerV2",
        ":CtsInstallerCujTestNoLauncherActivityApp",
        ":CtsInstallerCujTestNoLauncherActivityAppV2",
    ],
    per_testcase_directory: true,
}

android_test {
    name: "CtsPackageInstallerCUJInstallationTestCases",
    defaults: ["cts_package_installer_cuj_defaults"],
    manifest: "AndroidManifest_installation.xml",
    srcs: [
        "src/android/packageinstaller/criticaluserjourney/cts/InstallationTestBase.java",
        "src/android/packageinstaller/criticaluserjourney/cts/InstallationViaIntentActionViewTest.java",
        "src/android/packageinstaller/criticaluserjourney/cts/InstallationViaIntentForResultTest.java",
        "src/android/packageinstaller/criticaluserjourney/cts/InstallationViaIntentTest.java",
        "src/android/packageinstaller/criticaluserjourney/cts/InstallationViaSessionTest.java",
        "src/android/packageinstaller/criticaluserjourney/cts/PackageInstallerCujTestBase.java",
    ],
    test_config: "InstallationTest.xml",
}

android_test {
    name: "CtsPackageInstallerCUJUninstallationTestCases",
    defaults: ["cts_package_installer_cuj_defaults"],
    manifest: "AndroidManifest_uninstallation.xml",
    srcs: [
        "src/android/packageinstaller/criticaluserjourney/cts/PackageInstallerCujTestBase.java",
        "src/android/packageinstaller/criticaluserjourney/cts/UninstallationTestBase.java",
        "src/android/packageinstaller/criticaluserjourney/cts/UninstallationViaIntentActionDeleteTest.java",
        "src/android/packageinstaller/criticaluserjourney/cts/UninstallationViaIntentActionUninstallPackageTest.java",
        "src/android/packageinstaller/criticaluserjourney/cts/UninstallationViaPackageInstallerApiTest.java",
    ],
    test_config: "UninstallationTest.xml",
}

android_test {
    name: "CtsPackageInstallerCUJUpdateOwnerShipTestCases",
