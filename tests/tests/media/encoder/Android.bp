package {
    // See: http://go/android-license-faq
    default_applicable_licenses: [
        "Android-Apache-2.0",
        "cts_tests_tests_media_license",
    ],
    default_team: "trendy_team_android_video_image_codecs",
}

java_defaults {
    name: "MediaEncoderTestCases_defaults",
    defaults: ["cts_defaults"],
    // include both the 32 and 64 bit versions
    compile_multilib: "both",
    static_libs: [
        "ctstestrunner-axt",
        "cts-media-common",
    ],
    jni_libs: [
        "libctscodecutils_jni",
    ],
    srcs: [
        "src/**/*.java",
    ],
    // This test uses private APIs
    platform_apis: true,
    jni_uses_sdk_apis: true,
    host_required: ["cts-dynamic-config"],
    min_sdk_version: "29",
    target_sdk_version: "31",
}

android_test {
    name: "CtsMediaEncoderTestCases",
    defaults: ["MediaEncoderTestCases_defaults"],
    test_config: "AndroidTest.xml",
    test_suites: [
        "cts",
        "general-tests",
    ],
}

android_test {
    name: "MctsMediaEncoderTestCases",
    defaults: ["MediaEncoderTestCases_defaults"],
    test_config: "AndroidTest-mcts.xml",
    test_suites: [
        "cts",
        "general-tests",
        "mcts-media",
        "mts-media",
    ],
}

test_module_config {
    name: "CtsMediaEncoderTestCases_Presubmit_NoDevice",
    base: "CtsMediaEncoderTestCases",
    test_suites: ["general-tests"],
    include_annotations: ["android.platform.test.annotations.Presubmit"],
    exclude_annotations: ["android.platform.test.annotations.RequiresDevice"],
}

test_module_config {
    name: "MctsMediaEncoderTestCases_Presubmit",
    base: "MctsMediaEncoderTestCases",
    test_suites: ["general-tests"],
    include_annotations: ["android.platform.test.annotations.Presubmit"],
}
