package {
    default_team: "trendy_team_ui_toolkit",
    default_applicable_licenses: ["Android-Apache-2.0"],
}

android_test {
    name: "CtsViewTestCases",
    defaults: ["cts_defaults"],

    // Tag this module as a cts test artifact
    test_suites: [
        "cts",
        "general-tests",
    ],

    compile_multilib: "both",

    libs: [
        "android.test.runner.stubs",
        "android.test.base.stubs",
    ],

    static_libs: [
        "android.view.flags-aconfig-java",
        "androidx.test.rules",
        "androidx.test.ext.junit",
        "compatibility-device-util-axt",
        "ctsdeviceutillegacy-axt",
        "ctstestrunner-axt",
        "cts-input-lib",
        "cts-hardware-lib",
        "cts-display-lib",
        "junit-params",
        "mockito-target-minus-junit4",
        "platform-test-annotations",
        "androidx.test.uiautomator_uiautomator",
        "truth",
        "CtsSurfaceValidatorLib",
        "cts-wm-util",
        "flag-junit",
        "android.view.flags-aconfig-java",
        "android.view.inputmethod.flags-aconfig-java",
        "com.android.hardware.input-aconfig-java",
        "com.android.input.flags-aconfig-java",
        "ui-trace-collector",
        "collector-device-lib",
        "hwui_flags_java_lib",
        "framework_graphics_flags_java_lib",
        "Harrier",
    ],

    jni_libs: [
        "libctsview_jni",
        "libnativehelper_compat_libc++",
    ],

    srcs: [
        "src/**/*.java",
        "src/**/*.kt",
    ],

    sdk_version: "test_current",
}

test_module_config {
    name: "CtsViewTestCases_cts_surfaceoomtest",
    base: "CtsViewTestCases",
    test_suites: ["general-tests"],
    include_filters: ["android.view.cts.SurfaceOOMTest"],
}

// Instrumentation tests don't allow mixing package and Class
// names in include filters, so we pull out the package here.
test_module_config {
    name: "CtsViewTestCases_cts_input",
    base: "CtsViewTestCases",
    test_suites: ["general-tests"],
    include_filters: ["android.view.cts.input"],
}

test_module_config {
    name: "CtsViewTestCases_input_related",
    base: "CtsViewTestCases",
    test_suites: ["general-tests"],
    include_filters: [
        "android.view.cts.HoverTest",
        "android.view.cts.MotionEventTest",
        "android.view.cts.PointerCaptureTest",
        "android.view.cts.TooltipTest",
        "android.view.cts.TouchDelegateTest",
        "android.view.cts.VerifyInputEventTest",
        "android.view.cts.ViewTest",
        "android.view.cts.ViewUnbufferedTest",
    ],
}
