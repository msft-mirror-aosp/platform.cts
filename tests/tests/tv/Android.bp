package {
    default_applicable_licenses: ["Android-Apache-2.0"],
    default_team: "trendy_team_tv_os",
}

android_library {
    name: "CtsTvTestCases_lib",
    srcs: [
        "src/**/*.java",
        "src/**/*.aidl",
        ":tuner_cts_configuration_v1",
    ],
    libs: [
        "platform-test-annotations",
        "android.test.runner",
        "android.test.base",
    ],
    static_libs: [
        "androidx.test.core",
        "androidx.test.rules",
        "androidx.test.ext.truth",
        "compatibility-device-util-axt",
        "ctstestrunner-axt",
        "testng",
        "CtsTvTunerTestCases_lib",
    ],

    // sdk_version: "test_current",
    platform_apis: true,
    resource_dirs: [
        "res",
        "src/android/media/tv/tuner/cts/res",
    ],
}

android_test_helper_app {
    name: "CtsTvTestCasesHelperApp",
    defaults: ["cts_defaults"],
    platform_apis: true,
    privileged: true,
    static_libs: [
        "CtsTvTestCases_lib",
        "ctstestrunner-axt",
        "compatibility-device-util-axt",
        "androidx.legacy_legacy-support-v4",
        "androidx.test.rules",
    ],
}
