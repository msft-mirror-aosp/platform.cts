<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.app.appfunctions.cts.helper" >
    <application android:debuggable="true">
        <uses-library
            android:name="com.android.extensions.appfunctions"
            android:required="false" />
        <!-- Platform's AppFunctionService. -->
        <service android:name="android.app.appfunctions.testutils.TestAppFunctionService"
            android:permission="android.permission.BIND_APP_FUNCTION_SERVICE"
            android:exported="true">
            <property
                android:name="android.app.appfunctions"
                android:value="appfunctions.xml"/>
            <intent-filter>
                <action android:name="android.app.appfunctions.AppFunctionService"/>
            </intent-filter>
        </service>
        <receiver
            android:name="android.app.appfunctions.testutils.TestAppFunctionServiceLifecycleReceiver"
            android:exported="false"/>
    </application>
</manifest>
