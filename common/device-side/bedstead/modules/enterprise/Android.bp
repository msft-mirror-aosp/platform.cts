package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

filegroup {
    name: "bedstead-enterprise-common-srcs",
    srcs: [
        "src/main/kotlin/com/android/bedstead/enterprise/annotations/**/*.kt",
        "src/main/kotlin/com/android/bedstead/enterprise/annotations/**/*.java",
    ],
}

android_library {
    name: "bedstead-enterprise",
    srcs: [
        "src/main/kotlin/**/*.kt",
        "src/main/kotlin/**/*.java",
        ":bedstead-accounts-harrier-temporary-srcs",
    ],
    manifest: "src/main/AndroidManifest.xml",
    sdk_version: "system_current",
    min_sdk_version: "29",
    static_libs: [
        "bedstead-testapps",
        "RemoteAccountAuthenticator",
    ],
    plugins: ["auto_annotation_plugin"],
}

// this is just a legacy name of old Bedstead where everything was in one module,
// use bedstead-enterprise or bedstead instead
android_library {
    name: "Harrier",
    manifest: "src/main/AndroidManifest.xml",
    sdk_version: "system_current",
    min_sdk_version: "29",
    static_libs: [
        "bedstead-enterprise",
    ],
}

android_test {
    name: "bedstead-enterprise-test",
    srcs: [
        "src/test/kotlin/**/*.kt",
        "src/test/kotlin/**/*.java",
    ],
    test_suites: [
        "general-tests",
    ],
    static_libs: [
        "bedstead-enterprise",
        "truth",
        "testng", // used for assertThrows
        "bedstead-root",
    ],
    manifest: "src/test/AndroidManifest.xml",
    min_sdk_version: "29",
    sdk_version: "system_current",
}
