<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="@bool/fit_system_windows"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/audio_java_native_api_buttons" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="?android:attr/buttonBarStyle">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:text="@string/audio_datapaths_calibrate"
                android:id="@+id/audio_mixdown_calibrate_button"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:text="@string/audio_mixdown_devices"
                android:id="@+id/audio_mixdown_devices_button"/>
        </LinearLayout>

        <!-- Routing Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            style="?android:attr/buttonBarStyle">
            <RadioButton
                android:text="@string/audio_mixdown_micspeaker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/audio_mixdown_micspeaker"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"/>
            <RadioButton
                android:text="@string/audio_mixdown_analogheadset"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/audio_mixdown_analogheadset"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"/>
            <RadioButton
                android:text="@string/audio_mixdown_usbdevice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/audio_mixdown_usbdevice"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"/>
            <RadioButton
                android:text="@string/audio_mixdown_usbheadset"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/audio_mixdown_usbheadset"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"/>
        </LinearLayout>

        <!-- Player Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            style="?android:attr/buttonBarStyle">
            <Button
                android:text="@string/audio_general_start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/audio_mixdown_start"
                style="?android:attr/buttonBarButtonStyle"/>
            <Button
                android:text="@string/audio_general_stop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/audio_mixdown_stop"
                style="?android:attr/buttonBarButtonStyle"/>
            <Button
                android:text="@string/audio_mixdown_clearresults"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/audio_mixdown_clearresults"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>

        <com.android.cts.verifier.audio.audiolib.WaveScopeView
            android:id="@+id/uap_recordWaveView"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/audio_mixdown_channels" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/audio_mixdown_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <include layout="@layout/pass_fail_buttons" />
    </LinearLayout>
</ScrollView>
