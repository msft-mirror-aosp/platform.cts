<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="@bool/fit_system_windows"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    style="@style/RootLayoutPadding"
    tools:ignore="Autofill">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/uwb_accuracy_test_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"/>

            <CheckBox
                android:id="@+id/is_uwb_reference_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/is_reference_device_checkbox_text"/>

            <LinearLayout
                android:id="@+id/uwb_dut_mode_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/is_uwb_manual_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/is_manual_pass_text"/>

                <LinearLayout
                    android:id="@+id/uwb_start_stop_layout"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonBarStyle">

                    <Button
                        android:id="@+id/uwb_dut_start_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_test_presence"
                        style="?android:attr/buttonBarButtonStyle"/>

                    <Button
                        android:id="@+id/uwb_dut_stop_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stop_test_presence"
                        style="?android:attr/buttonBarButtonStyle"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/uwb_test_status_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/uwb_ref_mode_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarStyle">

                <Button
                    android:id="@+id/uwb_ref_start_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_test_presence"
                    style="?android:attr/buttonBarButtonStyle"/>
                <Button
                    android:id="@+id/uwb_ref_stop_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stop_test_presence"
                    style="?android:attr/buttonBarButtonStyle"/>
            </LinearLayout>

            <TextView
                android:id="@+id/uwb_device_found_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_found_presence"/>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/pass_fail_buttons"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>